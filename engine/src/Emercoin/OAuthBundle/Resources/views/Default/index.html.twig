{% extends '::base.html.twig' %}

{% block body %}
<nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><img class="navlogo" alt="" src="https://authorizer.io/storage/app/media/logo/logo.svg">
Authorizer Apps</a>
            </div>

            <!--/.nav-collapse -->
        </div>
    </nav>
<style>
.nod{padding-left:0}.nod li{list-style:none;overflow-wrap:break-word}.navbar-brand{color:#ddd;font-size:13px!important;font-weight:700}.panel-auth{border:1px solid #f6f6f6;border-radius:0}.panel-auth .panel-heading h3{font-weight:100}.panel-auth .panel-heading{background:#fafbfc;border-bottom:1px solid #f6f6f6;border-radius:0}.panel-auth .panel-body{background:#fafbfc}.panel-auth .panel-footer{background:#fafbfc;border-top:medium none}.panel-auth .panel-footer a{border-bottom:1px dashed;color:#2098f5}
</style>
    <div class="container">
        <br><br><br>
        <div class="alert alert-success" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    Welcome to Emercoin OAuth Server!
    {% if is_granted('ROLE_USER') %}You have authenticated by `{{ token_storage.token.providerKey }}` as {{ app.user }}{% else %}You have authenticated as anon.{% endif %}
    
    </div>
    

    {% if is_granted('ROLE_ADMIN') %}
    <pre>

    Application Environment: {{ app.environment }}

    SSL: {{ app.request.secure }}
    SSL Protocol: {{ app.request.server.get('SSL_PROTOCOL') }}
    SSL Client Serial: {{ app.request.server.get('SSL_CLIENT_M_SERIAL')|lower }}
    SSL Client Verify: {{ app.request.server.get('SSL_CLIENT_VERIFY') }}
    SSL Client E-mail: {{ app.request.server.get('SSL_CLIENT_S_DN_Email')|lower }}

    Client IP: {{ app.request.server.get('REMOTE_ADDR') }}

    Server IP: {{ app.request.server.get('SERVER_ADDR') }}
    Server Software: {{ app.request.server.get('SERVER_SOFTWARE') }}
    </pre>
    {% endif %}

    {% if is_granted('ROLE_USER') %}
        {{ render(controller("EmercoinOAuthBundle:Client:index")) }}
    {% endif %}
</div>
{% endblock body %}
